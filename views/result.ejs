    ::-webkit-scrollbar {
        width: 6px
    }

    ::-webkit-scrollbar-track {
        background: rgb(0, 0, 0, 0.25);
    }

    ::-webkit-scrollbar-thumb {
        background: #ff5b5b;
        border-radius: 1em;
        transition: .3s
    }

    ::selection {
        background: #ffb1b1
    }

    ::-moz-selection {
        background: #ffb1b1
    }

    * {
        color: white;
        font-family: 'Roboto Mono', monospace;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        box-sizing: border-box;
    }

    body {
        overflow: hidden;
        background-color: #fafafa;
    }
    #text{
        font-size: 50px;
        color: white;    
        }
    h1{
        font-weight: 700;
    }

    a{
        color: rgba(0, 0, 0, 0.3)
    }

    h2{
        color: #0f0f10;
        text-align: left;
    }

    .body{
        background-color: #f0f0f0;
        position: fixed;
        z-index: 100;
        bottom: 0;
        left: 0;
        max-width: 430px;
        margin: 0 auto;
        padding: 0px 30px;
        transition: 0.2s ease;
        overflow-y: scroll;
        overflow-x: hidden;
        height: 100%;
        display: block;
    }


    .location{
        position: relative;
        background-color: #fff;
        border-radius: 3px;
        padding: 1.5rem;
        transition: transform .15s; 
        cursor: pointer;
        margin-bottom: 30px;
    }

    .toggleButton{
      padding: 3px 12px;
      margin: 0 auto;
      position: fixed;
      z-index: 100;
      right: 34px;
      width: 50px;
      background-color: #c9c9c9;
      height: 30px;
      border-bottom-right-radius: 3px;
      border-bottom-left-radius: 3px;
      display: none;
    }

    .cover{
        width: 100%;
        background-size: cover;
    }

    .location:hover{
        -webkit-transform: translateY(-3px);
        -ms-transform: translateY(-3px);
        transform: translateY(-3px);
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15);
    }

    .location:active{
        -webkit-transform: translateY(-3px);
        -ms-transform: translateY(-3px);
        transform: translateY(-3px);
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15);
    }

    .location:visited{
        -webkit-transform: translateY(-3px);
        -ms-transform: translateY(-3px);
        transform: translateY(-3px);
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.15);
    }

    .website{
      color: rgba(0, 0, 0, 0.8);
      text-decoration: underline;
    }

    .columns{
        display: grid;
        grid-template-columns: 1fr;
        width: 100%;
        grid-gap: 0px 0px;
        gap: 0px 0px;
    }
    div{
        display: block;
    }

    p{
        color: #0f0f10;
        font-weight: normal;
        cursor: auto;
    }
    #map {
        position: absolute; top: 0; right: 0; bottom: 0; left: 0;
        transition: 0.2s ease;
      }
    
    .continer{
        position: relative;
    }

    @media only screen and (max-width: 846px){
        .body{
          width: 300px;
        }

        h1{
