                map.setCenter(pos);

            });

            var locationsData = <%- data %>

            var specifics = JSON.stringify(locationsData);
            var dataLocations = JSON.parse(specifics);

            // The location of Uluru
            var uluru = {lat: dataLocations[0].latitude, lng: dataLocations[0].longitude};
